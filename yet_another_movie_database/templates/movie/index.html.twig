{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Director</th>
                <th>Release_year</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in pagination.movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.director }}</td>
                <td>{{ movie.releaseYear }}</td>
                <td>{{ movie.description }}</td>
                <td>
                    <a href="{{ path('app_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        {% if pagination.totalItems > 0 %}
    <ul class="pagination">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_movie_new', {'page': pagination.page - 1}) }}">Previous</a>
            </li>
        {% endif %}

        {% for page in 1..pagination.pages %}
            <li class="page-item{% if page == pagination.page %} active{% endif %}">
                <a class="page-link" href="{{ path('app_movie_new', {'page': page}) }}">{{ page }}</a>
            </li>
        {% endfor %}

        {% if pagination.page < pagination.pages %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_movie_index', {'page': pagination.page + 1}) }}">Next</a>
            </li>
        {% endif %}
    </ul>
{% endif %}

    <a href="{{ path('app_movie_new') }}">Create new</a>
{% endblock %}
